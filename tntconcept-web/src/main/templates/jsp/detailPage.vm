$_stajanov.info("detailPage.vm - begin")
#set( $elw = $tools.uncapitalizeFirst( $entity ) )
#set( $dollar = "$" )


##
## MACRO: field
##
#macro( field $field )

  #set( $fld = $tools.capitalizeFirst($field.name) )
  #set( $df = $desc-props.getProperty("field.${field.name}.displayField")  )
  
  
  
  #if( $desc-props.getProperty("field.${field.name}.ignoreInDetail") )
    <%-- Ignored field: $field.name --%>
  
  #else
    <%-- Field: $field.name --%>
    <tr>
	<td class="detailLabelRW">${dollar}{msg['${elw}.${field.name}']}:</td>
	<td class="detailFieldCell">
        #if( $field.class.simpleName.startsWith("Set") )
          	#if( !$_util.isNull( $field.oneToMany.class1 ) )
		        <%@include file="inlineDetail${tools.getClassName( $field.oneToMany.class1 )}.jsp"%>
          	#else
          		<h:selectManyListbox id="${field.name}" size="4">
	              <f:selectItems value="#{${elw}Bean.${field.name}Selected}" />
	              <f:converter converterId="autentia.EntityConverter"/>
		              <f:attribute name="com.autentia.tnt.converter.EntityConverter.valueClass" 
		                           value="$field.manyToMany.class1"/> 
	            </h:selectManyListbox>
          	#end
 	    #elseif( $field.class.simpleName.startsWith("OneToOne") || $field.class.simpleName.startsWith("ManyToOne") )
 	    	<h:outputText value="#{${elw}Bean.${field.name}.${df}}"/>
 	    #elseif( $field.type2.endsWith("Date") )	
 	    	<h:outputText value="#{${elw}Bean.${field.name}}" converter="autentia.dateConverter" />
 	    #elseif( $field.type2.equals("boolean") )
		<h:selectBooleanCheckbox id="${field.name}" value="#{${elw}Bean.${field.name}}" disabled="true"/>
        #elseif( !$_util.isNull($field.type.name) && $field.type.name == "com.autentia.tnt.util.GenericEnumUserType" )
        	<h:outputText value="#{${elw}Bean.${field.name}Formatted}" />
        #elseif( $desc-props.getProperty( "field.${field.name}.isFile" ) )
          <i:fileLink type="${elw}" objectId="${dollar}{${elw}Bean.${class.id.name}}" file="${dollar}{${elw}Bean.${field.name}}" /> 
     	#else
 	       <h:outputText value="#{${elw}Bean.${field.name}}" />
 	#end
      </td>
    </tr>
  #end
#end


