<%@page language="java" contentType="text/html; charset=UTF-8"%>

<%@include file="/inc/tlibs.jsp" %>

<html>
  <head>
    <%@include file="/inc/uiCore.jsp" %>
  </head>	
  <body>
    
    <!-- edit${entity}.jsp: generated by stajanov code generator -->
    <f:loadBundle basename="com.autentia.tnt.resources.messages" var="msg" />
    <i:location place="detail${entity}" msg="${dollar}{msg}"/> 
    
    <f:view>
      <%@include file="/inc/header.jsp" %>
      <h:form id="${elw}" enctype="multipart/form-data">
        
        <%-- Header --%>
        <i:titleBar name="${dollar}{${elw}Bean.${desc-props.getProperty("editTitleField")}}" msg="${dollar}{msg}">
          <t:commandLink action="#{${elw}Bean.edit}" immediate="true" rendered="#{${elw}Bean.editAvailable}">
            <f:param name="id" value="#{${elw}Bean.${class.id.name}}" />
            <h:graphicImage title="#{msg.entityActions_edit}"  value="/img/edit.gif" styleClass="cmdImg" />
          </t:commandLink>
          <h:commandLink action="#{${elw}Bean.delete}" rendered="#{${elw}Bean.deleteAvailable}" onclick="if( !confirm('#{msg['question.confirmDelete']}') ) return false;">
            <h:graphicImage title="#{msg.entityActions_delete}"  value="/img/delete.gif" styleClass="titleImg" />
          </h:commandLink>
          <h:commandLink action="#{${elw}Bean.list}" immediate="true">
            <h:graphicImage title="#{msg.entityActions_back}"  value="/img/back.gif" styleClass="titleImg" />
          </h:commandLink>
        </i:titleBar>


        <%-- Detail form --%>
        <table class="detailTable" cellpadding="0" cellspacing="0">

            #field( $class.id )
            #foreach( $field in $class.propertyArray )
              #field( $field )
            #end
            #foreach( $field in $class.manyToOneArray )
              #field( $field )
            #end
            #foreach( $field in $class.oneToOneArray )
              #field( $field )
            #end
            #foreach( $field in $class.setArray )
              #field( $field )
            #end

        </table>

      </h:form>
    </f:view>
    
  </body>
</html>  		
