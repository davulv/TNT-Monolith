 <%@page language="java" contentType="text/html; charset=UTF-8"%>

<%@include file="/inc/tlibs.jsp" %>

<html>
  <head>  
   <%@include file="/inc/uiCore.jsp" %>
  </head>	
  <body>
    <!-- accountEntrys.jsp: generated by stajanov code generator -->
    <f:loadBundle basename="com.autentia.tnt.resources.messages" var="msg" />
    <i:location place="bills" msg="${msg}"/> 
    
    <f:view>
      <%@include file="/inc/header.jsp" %>
    <h:form>
     
    </h:form>
      <h:form>        
         
        <i:titleBar msg="${msg}">       
          <h:selectOneMenu id="allTypes" title="#{msg['bill.selectType']}" value="#{billBean.selectedType}" onchange="submit();">
             <f:selectItems value="#{billBean.billTypes}" />
             <f:converter converterId="autentia.EnumConverter"/>              
          </h:selectOneMenu>
          <h:selectOneMenu title="#{msg['accountEntry.changeyear']}" id="fiscalYear" value="#{billBean.year}" onchange="submit();">
             <f:selectItems value="#{billBean.years}" />            
          </h:selectOneMenu> 
          <h:commandLink action="#{creditTitleBean.edit}" immediate="true">
          <f:param name="rowid" value="#{billBean.creditTitle.id}" />
            <h:graphicImage title="#{msg.entityActions_back}" value="/img/back.gif" styleClass="titleImg" />
          </h:commandLink>                
        </i:titleBar>       
         

        <t:dataTable id="list" var="bill" value="#{billBean.allMinusCreditTitle}" preserveDataModel="false" 
            cellpadding="0" cellspacing="0" styleClass="listTable" 
            headerClass="listHeaderCell" footerClass="listFooter" 
            rows="#{settingBean.mySettings.listSize}" rowClasses="listRowO,listRowE"
            columnClasses="listCmdCell,listCmdCell,listAccountEntryDate,listAccountEntryAmountDate,listAccountEntryConcept,listAccountEntryAmount,listAccountEntryAccount,listAccountEntryType"
            sortColumn="#{billBean.sortColumn}" sortAscending="#{billBean.sortAscending}">
           
          <h:column>
            <f:facet name="header">
              <f:verbatim>-</f:verbatim>
            </f:facet>
            <t:commandLink action="#{billBean.select}" onclick="if(!askSave('#{bill.id}','#{msg['question.confirmSave']}')) return false;">
              <f:param name="rowid" value="#{bill.id}" />
              <h:graphicImage title="#{msg['creditTitle.select_entry_and_create_billpayment']}" value="/img/add.png" styleClass="cmdImg" />
            </t:commandLink>
          </h:column>
                     
          <h:column>
            <f:facet name="header">
              <f:verbatim>-</f:verbatim>
            </f:facet>
            <t:commandLink action="#{billBean.selectWitoutBillPayment}" onclick="if(!askSave('#{bill.id}','#{msg['question.confirmSave']}')) return false;">
              <f:param name="rowid" value="#{bill.id}" />
              <h:graphicImage title="#{msg['creditTitle.select_entry']}" value="/img/propagate.png" styleClass="cmdImg" />
            </t:commandLink>
          </h:column>

          <h:column>
            <f:facet name="header">
              <t:commandSortHeader styleClass="listHeader" columnName="number">
                <f:facet name="ascending">
                  <t:graphicImage value="/img/ascending-arrow.gif" border="0" />
                </f:facet>
                <f:facet name="descending">
                  <t:graphicImage value="/img/descending-arrow.gif" border="0" />
                </f:facet>
                <f:verbatim>${msg['bill.number']}</f:verbatim>
              </t:commandSortHeader>
            </f:facet>
            <h:outputText value="#{bill.number}" />
          </h:column>

		  <h:column>
            <f:facet name="header">
              <t:commandSortHeader styleClass="listHeader" columnName="billType">
                <f:facet name="ascending">
                  <t:graphicImage value="/img/ascending-arrow.gif" border="0" />
                </f:facet>
                <f:facet name="descending">
                  <t:graphicImage value="/img/descending-arrow.gif" border="0" />
                </f:facet>
                <f:verbatim>${msg['bill.billType']}</f:verbatim>
              </t:commandSortHeader>
            </f:facet>
          	<h:outputText value="#{bill.billType}">
	    		<f:converter converterId="autentia.EnumTranslator"/>
	  		</h:outputText>
          </h:column>

          <h:column>
            <f:facet name="header">
              <t:commandSortHeader styleClass="listHeader" columnName="provider">
                <f:facet name="ascending">
                  <t:graphicImage value="/img/ascending-arrow.gif" border="0" />
                </f:facet>
                <f:facet name="descending">
                  <t:graphicImage value="/img/descending-arrow.gif" border="0" />
                </f:facet>
                <f:verbatim>${msg['bill.provider']}</f:verbatim>
              </t:commandSortHeader>
            </f:facet>
            <h:outputText value="#{bill.provider.name}" />
          </h:column>
                    
          <h:column>
            <f:facet name="header">
              <t:commandSortHeader styleClass="listHeader" columnName="project">
                <f:facet name="ascending">
                  <t:graphicImage value="/img/ascending-arrow.gif" border="0" />
                </f:facet>
                <f:facet name="descending">
                  <t:graphicImage value="/img/descending-arrow.gif" border="0" />
                </f:facet>
                <f:verbatim>${msg['bill.project']}</f:verbatim>
              </t:commandSortHeader>
            </f:facet>
            <h:outputText value="#{bill.project.name}" />
          </h:column>

          <h:column>
            <f:facet name="header">
              <t:commandSortHeader styleClass="listHeader" columnName="creationDate">
                <f:facet name="ascending">
                  <t:graphicImage value="/img/ascending-arrow.gif" border="0" />
                </f:facet>
                <f:facet name="descending">
                  <t:graphicImage value="/img/descending-arrow.gif" border="0" />
                </f:facet>
                <f:verbatim>${msg['bill.creationDate']}</f:verbatim>
              </t:commandSortHeader>
            </f:facet>
            <h:outputText value="#{bill.creationDate}" converter="autentia.dateConverter"/>
          </h:column>

          <h:column>
            <f:facet name="header">
              <t:commandSortHeader styleClass="listHeader" columnName="startBillDate">
                <f:facet name="ascending">
                  <t:graphicImage value="/img/ascending-arrow.gif" border="0" />
                </f:facet>
                <f:facet name="descending">
                  <t:graphicImage value="/img/descending-arrow.gif" border="0" />
                </f:facet>
                <f:verbatim>${msg['bill.startBillDate']}</f:verbatim>
              </t:commandSortHeader>
            </f:facet>
            <h:outputText value="#{bill.startBillDate}" converter="autentia.dateConverter"/>
          </h:column>

          <h:column>
            <f:facet name="header">
              <t:commandSortHeader styleClass="listHeader" columnName="endBillDate">
                <f:facet name="ascending">
                  <t:graphicImage value="/img/ascending-arrow.gif" border="0" />
                </f:facet>
                <f:facet name="descending">
                  <t:graphicImage value="/img/descending-arrow.gif" border="0" />
                </f:facet>
                <f:verbatim>${msg['bill.endBillDate']}</f:verbatim>
              </t:commandSortHeader>
            </f:facet>
            <h:outputText value="#{bill.endBillDate}" converter="autentia.dateConverter"/>
          </h:column>
  
        </t:dataTable>
       
        <%-- Paginator control --%> 
        <%@include file="/inc/paginator.jsp" %>
        
      </h:form>
    </f:view>
    
  </body>
</html>