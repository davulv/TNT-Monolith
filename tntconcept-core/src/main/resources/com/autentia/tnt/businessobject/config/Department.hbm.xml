<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.autentia.tnt.businessobject.Department" table="Department">
    <id name="id" type="java.lang.Integer">
      <generator class="native" />
    </id>
    <many-to-one name="parent" class="com.autentia.tnt.businessobject.Department" column="parentId"/>
    <property name="name" type="java.lang.String"/>
    <property name="description" type="java.lang.String"/> 
    <property name="ownerId" type="java.lang.Integer" column="ownerId"/>
	<property name="departmentId" type="java.lang.Integer" column="departmentId"/>
	<property name="insertDate" type="java.util.Date" column="insertDate"/>
	<property name="updateDate" type="java.util.Date" column="updateDate"/>   
	
    <set name="organizations" table="Department_Organization">
		<key column="departmentId"/>
		<many-to-many column="organizationId" class="com.autentia.tnt.businessobject.Organization"/>
	</set>

    <set name="positions" table="Position_Department">
		<key column="departmentId"/>
		<many-to-many column="positionId" class="com.autentia.tnt.businessobject.Position"/>
	</set>
	
	<set name="tags" table="Department_Tag">
		<key column="departmentId"/>
		<many-to-many column="tagId" class="com.autentia.tnt.businessobject.Tag"/>
	</set>
	
   </class>
</hibernate-mapping>